/* 页面容器 */
.page-container {
    min-height: 100vh;
    background-color: #F0F4F8;
    position: relative;
}
/* 导航栏右侧按钮 */
.nav-right {
    padding: 0 30rpx;
    display: flex;
    align-items: center;
    margin-right: 200rpx; /* 为胶囊按钮预留足够空间 */
}
/* 导航栏图标间距 */
.nav-icon-spacer {
    width: 30rpx;
}
/* 红点提示 */
.badge-container {
    position: relative;
}
.badge {
    position: absolute;
    top: -6rpx;
    right: -6rpx;
    background-color: #FF5151;
    color: #FFFFFF;
    font-size: 20rpx;
    min-width: 30rpx;
    height: 30rpx;
    border-radius: 15rpx;
    text-align: center;
    line-height: 30rpx;
    padding: 0 6rpx;
    z-index: 1;
}
/* Tab 图标与徽章 */
.tab-icon-badge {
    position: relative;
    display: inline-block;
    margin-right: 8rpx;
}
.icon-badge {
    position: absolute;
    top: -8rpx;
    right: -8rpx;
    background-color: #FF5151;
    color: #FFFFFF;
    font-size: 20rpx;
    min-width: 30rpx;
    height: 30rpx;
    border-radius: 15rpx;
    text-align: center;
    line-height: 30rpx;
    padding: 0 6rpx;
    z-index: 1;
}
/* Tab 切换样式 */
.tab-container {
    display: flex;
    background-color: #FFFFFF;
    border-bottom: 1rpx solid #EEEEEE;
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    z-index: 10;
}
.tab-item {
    flex: 1;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}
.tab-text {
    font-size: 28rpx;
    color: #666666;
}
.tab-active .tab-text {
    color: #004299;
    font-weight: bold;
}
.tab-active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 4rpx;
    background-color: #004299;
    border-radius: 2rpx;
}
.tab-badge {
    position: absolute;
    top: 10rpx;
    right: 50rpx;
    background-color: #FF5151;
    color: #FFFFFF;
    font-size: 20rpx;
    min-width: 30rpx;
    height: 30rpx;
    border-radius: 15rpx;
    text-align: center;
    line-height: 30rpx;
    padding: 0 6rpx;
}
/* 内容区域 */
.content-container {
    padding: 20rpx;
}
/* 验证信息头部 */
.requests-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 10rpx 15rpx 10rpx;
    margin-bottom: 10rpx;
}
.requests-title {
    font-size: 28rpx;
    color: #333333;
    font-weight: bold;
}
/* 清空验证信息按钮 */
.clear-btn {
    background-color: #F5F5F5;
    color: #666666;
    font-size: 26rpx;
    padding: 12rpx 24rpx;
    border-radius: 30rpx;
    border: 1rpx solid #E0E0E0;
    transition: all 0.2s ease;
}
.clear-btn:active {
    background-color: #EEEEEE;
    transform: scale(0.98);
}
/* 搜索区域 */
.search-container {
    padding: 15rpx 0;
    margin-bottom: 20rpx;
}
.search-box {
    background-color: #FFFFFF;
    border-radius: 40rpx;
    padding: 12rpx 20rpx;
    display: flex;
    align-items: center;
    border: 1rpx solid #E0E0E0;
}
.search-input {
    flex: 1;
    height: 60rpx;
    font-size: 28rpx;
    margin: 0 15rpx;
    color: #333333;
}
/* 分类区域 */
.category-container {
    margin-bottom: 20rpx;
}
.category-card {
    background-color: #FFFFFF;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}
.category-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 30rpx;
    border-bottom: 1rpx solid #EEEEEE;
}
.category-item:last-child {
    border-bottom: none;
}
.category-left {
    display: flex;
    align-items: center;
}
.category-name {
    font-size: 28rpx;
    color: #333333;
    margin-left: 20rpx;
}
.category-right {
    display: flex;
    align-items: center;
}
.category-count {
    font-size: 24rpx;
    color: #999999;
    margin-right: 10rpx;
}
/* 分类区域 - 新增和修改 */
.category-section {
    border-bottom: 1rpx solid #EEEEEE;
}
.category-section:last-child {
    border-bottom: none;
}
.category-friends {
    background-color: #F8FAFC;
    padding: 10rpx 0;
    animation: slideDown 0.3s ease-out;
    transition: all 0.3s ease-out;
    overflow: hidden;
    border-bottom-left-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
}
@keyframes slideDown {
from {
        max-height: 0;
        opacity: 0;
}
to {
        max-height: 2000rpx;
        opacity: 1;
}
}
.no-friends {
    padding: 30rpx 0;
    display: flex;
    justify-content: center;
    align-items: center;
}
.no-friends-text {
    font-size: 26rpx;
    color: #999999;
    text-align: center;
}
/* 好友列表区域 */
.friends-container {
    background-color: #FFFFFF;
    border-radius: 12rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}
.list-header {
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #EEEEEE;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.list-title {
    font-size: 28rpx;
    color: #333333;
    font-weight: bold;
}
.list-count {
    font-size: 24rpx;
    color: #999999;
}
.friend-item {
    display: flex;
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #EEEEEE;
    align-items: center;
}
.friend-item:last-child {
    border-bottom: none;
}
.friend-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    background-color: #f0f0f0; /* 头像占位背景色 */
}
.friend-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.friend-name-row {
    display: flex;
    align-items: center;
    margin-bottom: 6rpx;
}
.friend-name {
    font-size: 30rpx;
    color: #333333;
    font-weight: 500;
}
.friend-detail {
    font-size: 24rpx;
    color: #666666;
    margin-bottom: 4rpx;
}
.friend-major {
    font-size: 24rpx;
    color: #666666;
}
.friend-contact {
    padding: 15rpx;
}
/* 空状态 */
.empty-container {
    padding: 100rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.empty-content {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.empty-text {
    font-size: 28rpx;
    color: #999999;
    margin: 40rpx 0;
    text-align: center;
}
.empty-btn {
    background-color: #004299;
    color: #FFFFFF;
    font-size: 28rpx;
    padding: 15rpx 40rpx;
    border-radius: 40rpx;
}
/* 联系方式弹窗 */
.contact-popup {
    background-color: #FFFFFF;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    padding-bottom: 30rpx;
    /* 底部安全区适配 */
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}
.contact-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 30rpx;
    border-bottom: 1rpx solid #EEEEEE;
}
.contact-title {
    font-size: 32rpx;
    color: #333333;
    font-weight: bold;
}
.contact-content {
    padding: 20rpx 30rpx;
}
.contact-info {
    margin-bottom: 30rpx;
}
.contact-item {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #F5F5F5;
}
.contact-item:last-child {
    border-bottom: none;
}
.contact-item-left {
    display: flex;
    align-items: center;
    min-width: 200rpx;
}
.contact-label {
    font-size: 28rpx;
    color: #333333;
    margin-left: 15rpx;
}
.contact-value {
    flex: 1;
    font-size: 28rpx;
    color: #333333;
    margin: 0 20rpx;
}
.contact-action {
    padding: 10rpx;
}
.contact-privacy {
    padding: 20rpx;
    background-color: #F5F5F5;
    border-radius: 8rpx;
}
.privacy-text {
    font-size: 24rpx;
    color: #999999;
    line-height: 1.6;
    display: block;
}
/* 分类下的好友项样式调整 */
.category-friends .friend-item {
    background-color: #FFFFFF;
    margin: 10rpx 20rpx;
    border-radius: 12rpx;
    border: none;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.08);
    transition: all 0.2s ease;
}
.category-friends .friend-item:last-child {
    margin-bottom: 15rpx;
}
.category-friends .friend-item:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}
.category-friends .friends-list {
    max-height: 600rpx;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}
/* 箭头旋转动画 */
.category-right .rotate-icon {
    transition: transform 0.3s ease;
    transform: rotate(0deg);
}
.category-right .rotate-icon.down {
    transform: rotate(90deg);
}
/* 分类项点击态 */
.category-item:active {
    background-color: #F5F7FA;
}
/* 分类项的活跃状态 */
.category-item.active {
    background-color: #F0F4FF;
}
/* 圆角调整 */
.category-item:first-child {
    border-top-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
}
.category-item:last-child {
    border-bottom-left-radius: 12rpx;
    border-bottom-right-radius: 12rpx;
}
/* 当分类展开时，调整分类项底部圆角 */
.category-section .category-item.active {
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
}
/* 搜索结果容器 */
.friends-container.search-results {
    margin-top: 20rpx;
}
/* 好友备注样式 */
.friend-remark {
    font-size: 24rpx;
    color: #666666;
    margin-left: 10rpx;
    font-weight: normal;
}
/* 好友验证信息样式 */
.requests-container {
    padding: 20rpx;
}
.request-card {
    background-color: #FFFFFF;
    border-radius: 12rpx;
    padding: 24rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.request-header {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
}
.request-avatar {
    width: 90rpx;
    height: 90rpx;
    border-radius: 45rpx;
    margin-right: 16rpx;
}
.request-info {
    flex: 1;
}
.request-name-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 6rpx;
}
.request-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333333;
}
.request-status {
    font-size: 24rpx;
    padding: 4rpx 12rpx;
    border-radius: 20rpx;
}
.status-pending {
    background-color: #FFF9E6;
    color: #FF9900;
}
.status-accepted {
    background-color: #E6FFF2;
    color: #07C160;
}
.status-rejected {
    background-color: #FFF2F2;
    color: #FF5151;
}
.request-detail {
    font-size: 24rpx;
    color: #999999;
}
.request-message {
    background-color: #F8F8F8;
    padding: 16rpx;
    border-radius: 8rpx;
    margin-bottom: 16rpx;
}
.message-label {
    font-size: 26rpx;
    color: #666666;
}
.message-content {
    font-size: 26rpx;
    color: #333333;
}
.request-time {
    font-size: 24rpx;
    color: #999999;
    text-align: right;
    margin-bottom: 16rpx;
}
.request-actions {
    display: flex;
    justify-content: flex-end;
}
.action-btn {
    font-size: 28rpx;
    padding: 10rpx 30rpx;
    border-radius: 30rpx;
    margin-left: 20rpx;
}
.btn-agree {
    background-color: #004299;
    color: #FFFFFF;
}
.btn-reject {
    background-color: #F8F8F8;
    color: #666666;
    border: 1rpx solid #DDDDDD;
}
/* 清空验证信息按钮 */
.clear-requests {
    display: flex;
    justify-content: flex-end;
    padding: 20rpx 0;
}
